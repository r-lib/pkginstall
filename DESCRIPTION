    callr (>= 2.0.2.9001),
    desc,
    filelock,
    glue,
    pkgbuild (>= 0.0.0.9001),
    R6,
    rlang,
    withr
Suggests: 
    covr,
    mockery,
    pkgdepends (>= 0.0.0.9001),
    testthat
ByteCompile: true
Encoding: UTF-8
